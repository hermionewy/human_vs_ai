{{#each copy.start}}
    {{#ifEquals id 'start-1'}}
        <div class="card-sci" hidden id={{id}}>
            <div class="card-sci-start-img-container">
                <div class="start-img-container sticky">
                        {{#each startImg}}
                        <div class="start-img-inner">
                            <img data-src="assets/images/{{value}}" src="assets/images/{{value}}" class="card-sci-img" id="step-{{@index}}-img">
                        </div>
                        {{/each}}
                </div>
            </div>
            <div class="card-sci__right">
                <div class="scroll_down">
                    <p class="btn__p"><span>&#8595;</span><br/>SCROLL DOWN</p>
                </div>
                {{#each step}}
                    <div class="start1-step" id="step-{{@index}}" data-index="{{@index}}">
                        <p class="card-sci-start__p" >{{{value}}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/ifEquals}}

    {{#ifEquals id 'start-2'}}
        <div class="card-sci" hidden id={{id}}>
            <!--<h1 class="spacer">{{title}}</h1>-->
            <div class="card-sci-btn-container">
            {{#each btn}}
                <a href="#{{next}}" class="card-sci-start-btn" data-next ={{next}} >
                    <img data-src="assets/images/{{img}}" src="assets/images/placeholder.jpg" alt="{{img}}"/>
                    <p class="btn__p">{{{text}}}</p>
                </a>
            {{/each}}
            </div>
            <div class="opening-byline">{{{byline}}}</div>
        </div>
    {{/ifEquals}}
{{/each}}
