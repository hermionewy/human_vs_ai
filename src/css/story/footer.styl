.card--footer
  width 100%
  position absolute
  bottom 0rem
  background-color #f3f2ee
  color black
  font-family $font-family-moderat
  text-align center
  //+mq('bp-3')
  //  bottom 0vh
  +mq('bp-4')
    bottom 0.5rem
  //  //bottom -5vh
  //  min-height 2rem

  & small
    margin-right 0.5rem
    font-size 70%
    +mq('bp-4')
      font-size 75%
      margin-right 2rem
    & a
      color black

  & .inner--footer
    padding auto
    //padding-top 0.2vh
    min-height 2.4rem
    height 100%

.site-footer__social
  display inline-flex
  list-style-type none
  margin-top 0.2rem
  padding 0

  & li
    margin-right 1rem
    & svg
      fill $icon-color

      &:hover
        fill $black
        width 100%
        height 100%
        transition $transition-base

