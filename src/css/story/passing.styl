.passing
  width 80px
  min-height 3rem
  position absolute
  right 55vw
  top 50vh
  z-index 1000

  +mq('bp-4')
    width 100px
    min-height 3rem
    position absolute
    right 26vw
    top 2rem

  & .passing-div
    width 100%
    height auto
    opacity 0

    &.show
      animation fade-in 1s ease-in 0.5s forwards
    &.hide
      animation fade-out 0.5s ease-in forwards

@keyframes fade-in {
  from {
    opacity 0
  }
  to {
    opacity 1
  }
}

@keyframes fade-out {
  from {
    opacity 1
  }
  to {
    opacity 0
  }
}