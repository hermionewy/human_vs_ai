#start-2
  .spacer
    height 0.5rem
#start-1
  position relative
  background-color black
  color $white
  flex-direction row-reverse
  //+mq('bp-5')
  //  flex-direction row-reverse
  & .card-sci-start__p
    b
      font-size: 0.875rem;
      font-style: normal;
      font-weight: 700;
      font-family: "Moderat", "Helvetica Neue", "Helvetica", sans-serif;
      line-height: 1.5;
      display: inline-block;
      margin-top: 2rem;

  .card-sci-start-img-container
    position fixed
    top 4.5rem
    left 0px
    width 100%
    height auto
    background-color black
    +mq('bp-4')
      width 50%
      height 100%

    .start-img-container
      width 100%
      height 100%
      .start-img-inner
        position absolute
        width 100%
        +mq('bp-4')
          height 100%
          left: 50%;
          top: 50%;
          transform: translate(-50%, -50%)
        .card-sci-img
          position relative
          opacity 0
          width: 100%;
          height: 90%;
          object-fit: contain;
          transition 1s ease-in-out
          &.active
            opacity 1

  .card--btn
    margin-bottom 12rem
    +mq('bp-5')
      margin-bottom 20rem

  .start1-step
    margin-top 65vh
    margin-bottom 15vh
    background-color rgba(0,0,0,0.6)
    color $white
    +mq('bp-4')
      margin-top 40vh
      margin-bottom 50vh
    .card-sci-start__p
      text-align center
      font-family $font-family-grifo-bold
      max-width $column-width
      margin auto
      set-type-size('large', true)
      opacity 0.3
      transition 1.5s ease-in-out
      &.active
        opacity 1

  #step-0 .card-sci-start__p
    set-type-size('xx-large', true)
    +mq('bp-5')
      font-size 70px


  .card-sci-btn-container
    margin 5rem 0
    .card-sci-btn
      background-color black
      p
        color $white

#step-8
  height 100vh
  background-color rgba(0, 0, 0, 0)!important

.scroll_down
  position fixed
  bottom 2rem
  width: calc(100% - 5rem)
  z-index 100
  color white
  +mq('bp-4')
    width: calc( 50% - 4rem )
  .btn__p
    text-align center
    color white;
    font-size: 0.7rem;
    +mq('bp-4')
      font-size: 0.9rem;
    span
      font-size: 1.5rem;
      +mq('bp-4')
        font-size: 2rem;
