.site-header__nav-list
  display flex
  & .site-header__nav-item
    margin 0rem
    list-style-type none
    +mq('bp-4')
      margin 0.4rem
    +mq('bp-5')
      margin 0.4rem 0.6rem
    & .site-header__nav-link
      color $icon-color
      font-family $font-family-moderat
      font-weight $font-weight-bold
      transition $transition-base
      display none
      +mq('bp-4')
        display inline

    & .site-header__nav-link:hover
      color #333
      text-decoration none


.site-menu__btn.btn--secondary
  display inline-flex
  margin 0px
  +mq('bp-4')
    display none

.btn--secondary:hover svg line
      stroke: $icon-color
      transition: $transition-base

.site-menu__btn:hover

  & .icon-open__group
    transition: $transition-base

    &:nth-of-type(1)
      transform: translateX(-5px)


    &:nth-of-type(2)
      transform: translateX(-8px)


    &:nth-of-type(3)
      transform: translateX(-3px)


.site-menu.site-about
  transition $transition-base
  display block
  position absolute
  right 2.5rem
  top 3rem
  opacity 0

  &.is-revealed
    opacity 1

  +mq('bp-4')
    display none

  & nav
    padding 1rem
    width 200px
    background-color rgba(255, 255, 255, 0.8)
    border 1px solid #ccc
    //box-shadow 0px 0px 1px $icon-color

    & a.site-about__link
      transition $transition-base
      font-family $font-family-moderat
      //font-family Grifo-Bold
      font-weight $font-weight-bold
      color $icon-color
      &:hover
        color #333
        cursor pointer



.site-about__list-item
  margin-bottom 1rem

.icon-open
  display inline-flex
  &.hideBtn
    display none

.icon-close
  display none
  &.showBtn
    display inline-flex